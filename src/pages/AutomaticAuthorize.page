<apex:page controller="AutomaticAuthorizeCtrl" title="Automatic Authorize">
	<apex:stylesheet value="{!URLFOR($Resource.autoAssets, 'bootstrap.css')}" />
	<div class="bs">
		<div class="container pull-left">
			<img src="{!URLFOR($Resource.autoAssets, 'Automatic_Logo.png')}" style="width:200px;"/>
			<p>
				Click "Authorize" below to be directed to the Automatic site, where you will log in and grant access to your Automatic account.
			</p>
			<apex:form>
				<apex:commandButton styleClass="btn btn-primary" action="{!doRedirect}" value="Authorize"/>
			</apex:form>
		</div>
	</div>
</apex:page>